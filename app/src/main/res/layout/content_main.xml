<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="entertainment.meetup.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/welcome_to_meetup"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textStyle="italic|bold"
        android:textColor="#21395B"/>

    <Button
        android:id="@+id/enroll_artist_button"
        android:layout_below="@id/welcome_text"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:background="#B6B4BF"
        android:padding="10dp"
        android:text="@string/enroll_as_artist"
        android:textSize="20sp"
        android:textColor="#3B1417"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/looking_for_artist_button"
        android:layout_below="@id/enroll_artist_button"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:padding="10dp"
        android:background="#B6B4BF"
        android:textColor="#3B1417"
        android:text="@string/looking_for_artist"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
